{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@utils": ["./src/utils"],
      "@assets": ["./src/assets"],
      "@hooks": ["./src/hooks"],
      "@interfaces": ["./src/interfaces"],
      "@shared": ["./src/shared"],
      "@services": ["./src/services"],
      "@styles": ["./src/styles"],
      "@contexts": ["./src/contexts"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
